<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:orientation="vertical"
    tools:context="com.example.pepperapp.Controller.MovementCategoryActivity">


    <ImageButton

        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFFF"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"></ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please precise the exercise category"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="italic"></TextView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:padding="20dp"
            android:scrollbarFadeDuration="1000"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbHorizontal="@color/colorAccent"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/b_neck"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/neck"></ImageButton>

                        <TextView
                            android:id="@+id/t_neck"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Neck"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/b_hip"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/hip"></ImageButton>

                        <TextView
                            android:id="@+id/t_hip"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Hip"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/b_Elbow"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/elbow"></ImageButton>

                        <TextView
                            android:id="@+id/t_Elbow"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Elbow"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/b_shoulder"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/shoulder"></ImageButton>

                        <TextView
                            android:id="@+id/t_shoulder"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Shoulder"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"

                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/b_wrist"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/skeleton"></ImageButton>

                        <TextView
                            android:id="@+id/t_wrist"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Wrist"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/b_fist"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"
                            android:src="@drawable/strength"></ImageButton>

                        <TextView
                            android:id="@+id/t_fist"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Fist"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/b_conbined"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="#FFF"
                            android:outlineSpotShadowColor="@android:color/black"
                            android:padding="10dp"></ImageButton>

                        <TextView
                            android:id="@+id/t_conbined"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:src="@drawable/stretching"
                            android:text="Combined"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp"
                            android:textStyle="italic"></TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</LinearLayout>