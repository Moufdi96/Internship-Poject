<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pepperproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.pepperapp.Controller.MovementListActivity"
            android:label="@string/title_activity_movement_list"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name="com.example.pepperapp.Controller.MovementCategoryActivity"
            android:label="MovementCategoryActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.example.pepperapp.Controller.MainActivity">  com.example.pepperapp.Controller
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>