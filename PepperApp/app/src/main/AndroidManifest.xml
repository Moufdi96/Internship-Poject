<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pepperapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.ActivityListActivity"
            android:label="ActivityListActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Controller.MovementCategoryActivity"
            android:label="MovementCategoryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.MovementListActivity"
            android:label="MovementListActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>